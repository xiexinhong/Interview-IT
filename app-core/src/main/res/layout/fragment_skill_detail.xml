<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/skill_detail_title_bar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/title_bar_height"
                    android:background="@color/title_bar">

        <ImageView android:id="@+id/skill_detail_back_imgbtn"
                   android:layout_width="40dp"
                   android:layout_height="40dp"
                   android:layout_marginLeft="20dp"
                   android:layout_alignParentLeft="true"
                   android:layout_centerVertical="true"
                   android:src="@drawable/title_bar_back"/>

        <TextView android:id="@+id/skill_detail_title_txt"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerInParent="true"
                  android:textColor="@android:color/white"
                  android:text="@string/skill_detail_title_bar_text"
                  android:textSize="20sp"/>
    </RelativeLayout>

    <FrameLayout android:id="@+id/skill_detail_content_wrap"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_below="@+id/skill_detail_title_bar"
                 android:background="@color/read_background">
        <org.xxh.interview.view.MeHorizontalScrollView android:id="@+id/skill_detail_horizontal"
                                                       android:orientation="horizontal"
                                                       android:layout_width="match_parent"
                                                       android:layout_height="match_parent">
            <org.xxh.interview.view.MeScrollView android:id="@+id/skill_detail_vertical"
                                                 android:orientation="vertical"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="match_parent">

                 <org.xxh.interview.view.ReadTextView
                        android:id="@+id/skill_detail_content_txt"
                        android:layout_width="700dp"
                        android:layout_height="200dp"
                        android:gravity="left"/>
            </org.xxh.interview.view.MeScrollView>
        </org.xxh.interview.view.MeHorizontalScrollView>

    </FrameLayout>

</RelativeLayout>