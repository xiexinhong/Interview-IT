<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/title_bar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/title_bar_height"
                    android:background="@color/title_bar">

    <ImageView android:id="@+id/title_back_imgbtn"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="15dp"
               android:layout_alignParentLeft="true"
               android:layout_centerVertical="true"
               android:src="@drawable/title_bar_back"/>

    <FrameLayout android:layout_width="@dimen/homef_head_switch_bar_width"
                 android:layout_height="wrap_content"
                 android:layout_centerHorizontal="true"
                 android:layout_centerVertical="true">
        <org.xxh.interview.view.SlidingButton
                android:id="@+id/title_sliding_btn"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/homef_head_switch_bar_height"/>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="@dimen/homef_head_switch_bar_height"
                      android:orientation="horizontal"
                      android:gravity="center">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:gravity="center"
                      android:textSize="18sp"
                      android:text="@string/praise_title_problem_txt"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:gravity="center"
                      android:textSize="18sp"
                      android:text="@string/praise_title_experience_txt"/>
        </LinearLayout>
    </FrameLayout>

</RelativeLayout>
