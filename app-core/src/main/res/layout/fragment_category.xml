<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout android:id="@+id/category_title_bar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/title_bar_height"
                    android:background="@color/title_bar"
                    android:gravity="center">
        <TextView android:id="@+id/category_title_content_txt"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="@android:color/white"
                  android:text="@string/category_title_bar_text"
                  android:textSize="20sp"/>
    </RelativeLayout>

    <ListView android:id="@+id/category_listview"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_below="@+id/category_title_bar">
    </ListView>



</RelativeLayout>