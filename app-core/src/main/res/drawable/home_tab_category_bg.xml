<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--没有聚焦状态-->
    <item android:state_focused="false" android:state_selected="false"
          android:state_pressed="false" android:drawable="@drawable/home_category_default"/>
    <item android:state_focused="false" android:state_selected="true"
          android:state_pressed="false" android:drawable="@drawable/home_category"/>
    <!--聚焦状态-->
    <item android:state_focused="true" android:state_selected="false"
          android:state_pressed="false" android:drawable="@drawable/home_category"/>
    <item android:state_focused="true" android:state_selected="true"
          android:state_pressed="false" android:drawable="@drawable/home_category"/>
    <!--按下-->
    <item android:state_pressed="true" android:drawable="@drawable/home_category"/>
</selector>